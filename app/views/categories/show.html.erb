<p style="color: green"><%= notice %></p>

<div id="<%= dom_id @category %>" class="mb-3">
  <h4><b>Name: </b><%= @category.name %></h4>
  <h4><b>Description: </b><%= @category.description %></h4>
</div>

<div>
  <div class="mb-1">
    <%= link_to "Edit this category", edit_category_path(@category), class: "btn btn-dark" %>
    <%= link_to "Back to categories", categories_path, class: "btn btn-dark" %>
  </div>
  <%= button_to "Destroy this category", @category, method: :delete, class: "btn btn-danger" %>
</div>

<p class="text-success"><%= notice %></p>

<h1>Categories</h1>

<div class="mt-3" id="categories">
  <% @categories.each do |c| %>
    <%= render 'category', category: c %>

    <div class="mb-3">
      <%= link_to "Show this category", c, class: "btn btn-dark" %>
      <%= link_to "Edit this category", edit_category_path(c), class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

<%= link_to "New category", new_category_path, class: "btn btn-success" %>
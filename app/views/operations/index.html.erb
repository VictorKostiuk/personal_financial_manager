<p class="text-success"><%= notice %></p>

<h1>Operations</h1>

<div class="mt-3" id="operations">
  <% @operations.each do |operation| %>
    <div id="<%= dom_id operation %>" class="card mb-3">
      <div class="card-body">
        <p class="card-text">
          <strong>Amount:</strong>
          <%= operation.amount %>
        </p>

        <p class="card-text">
          <strong>Odate:</strong>
          <%= operation.odate.strftime("%d.%m.%Y %k:%M") %>
        </p>

        <p class="card-text">
          <strong>Description:</strong>
          <%= operation.description %>
        </p>

        <p class="card-text">
          <strong>Type:</strong>
          <% if operation.spend %>
            Income
          <% else %>
            Expense
          <% end %>
        </p>

        <p class="card-text">
          <strong>Category:</strong>
          <%= operation.category.name %>
        </p>

      </div>
      <p>
        <%= link_to "Show this operation", operation, class: "btn btn-dark" %>
      </p>
    </div>
  <% end %>
</div>

<%= link_to "New operation", new_operation_path, class: "btn btn-success" %>

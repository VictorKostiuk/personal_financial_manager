<%= form_with(model: operation) do |form| %>
  <% if operation.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(operation.errors.count, "error") %> prohibited this operation from being saved:</h2>

      <ul>
        <% operation.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :amount, style: "display: block" %>
    <%= form.text_field :amount %>
  </div>

  <div>
    <%= form.label :odate, style: "display: block" %>
    <%= form.datetime_field :odate %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description %>
  </div>

  <div>
    <%= form.label :category_id, style: "display: block" %>
    <%= form.collection_select :category_id, Category.all, :id, :name %>
  </div>

  <div class="form-check form-check-inline">
    <%= label :spend, "Витрата", value: true %>
    <%= form.radio_button :spend, false, :checked => true, :value => false, class: "form-check-input" %>
  </div>
  <div class="form-check form-check-inline">
    <%= label :spend, "Дохід", value: false %>
    <%= form.radio_button :spend, true, :value => true, class: "form-check-input" %>
  </div>



  <div>
    <%= form.submit %>
  </div>
<% end %>
